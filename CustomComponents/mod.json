{
	"Name": "CustomComponents",
	"Author": "Denadan",
	"Website": "https://github.com/BattletechModders/CustomComponents",

	"Enabled": true,
	"DependsOn": [],
	"DLL": "CustomComponents.dll",
	"DLLEntryPoint": "CustomComponents.Control.Init",

	"CustomResourceTypes": [ "CCCategories", "CCDefaults", "CCTagRestrictions", "CustomSVGIcon", "CCHardpoints", "CCCEquipLocationTag", "CCUnitTypes" ],

	"Settings": {
		"DEBUG_ValidateMechDefs": false,
		"DEBUG_ShowOnlyErrors": false,
		"DEBUG_ShowAllUnitTypes": false,
		"DEBUG_ShowConfig": false,
		"DEBUG_ShowLoadedCategory": false,
		"DEBUG_ShowLoadedDefaults": false,
		"DEBUG_ShowLoadedAlLocations": false,
		"DEBUG_ShowLoadedHardpoints": true,
		"DEBUG_EnableAllTags": false,
		"DEBUG_ShowMechUT": false,
		"DEBUG_DropValidationDisabled": false,

		"Message": {

			"WrongWeaponCount": "Cannot equip more then {0} weapons",
			"Flags_InvaildComponent": "{0} is placeholder, remove it",
			"Flags_DestroyedComponent": "{0} is destroyed, replace it",
			"Flags_DamagedComponent": "{0} is damaged, repair it",
			"Tonnage_AddAllow": "{0} designed for {1}t 'Mech",
			"Tonnage_ValidateAllow": "{0} designed for {1}t 'Mech",
			"Tonnage_AddLimit": "{0} designed for {1}-{2}t 'Mech",
			"Tonnage_ValidateLimit": "{0} designed for {1}-{2}t 'Mech",
			"Category_MaximumReached": "Unit cannot install more {0} in {4}",
			"Category_Mixed": "Mech can have only one type of {0}",
			"Category_ValidateMinimum": "MISSING {0}: This unit must mount at least {1} in {5}",
			"Category_ValidateMaximum": "EXCESS {0}: This mech can't mount more then {1} in {5}",
			"Category_ValidateMixed": "WRONG {0}: Mech can have only one type of {0}",
			"Base_LocationDestroyed": "Cannot add {0} to {1}: The location is Destroyed.",
			"Base_AddWrongLocation": "Cannot add {0} to {1}: Component is not permitted in this location.",
			"Base_ValidateWrongLocation": "Unit have {0} installed in wrong location",
			"Base_AddNoHardpoints": "Unit doesn't have {4} hardpoints in {5}",
			"Base_AddNotEnoughHardpoints": "Unit doesn't have enough {4} hardpoints in {5}",
			"Base_ValidateNotEnoughHardpoints": "Unit doesn't have enough {1} hardpoints in {5}",
			"Base_AddInventorySize": "Can't install {0} - not enough free space at {1}"
		},


		"ColorTags": [],

		"TagRestrictionDropValidateRequiredTags": false,
		"TagRestrictionDropValidateIncompatibleTags": true,
		"UseDefaultFixedColor": false,
		"AddWeightToCategory": true,
		"BaseECMValidation": true,

		"DefaultFlagBackgroundColor": "UpgradeColor",
		"InvalidFlagBackgroundColor": "Red",
		"PreinstalledOverlayCColor": {
			"R": 200,
			"G": 90,
			"B": 30,
			"A": 55
		},
		"DefaultFlagOverlayCColor": {
			"R": 180,
			"G": 180,
			"B": 180,
			"A": 40
		},

		"HardpointDescriptionColor": "#008000",
		"CategoryDescriptionColor": "#008000",

		"OmniTechFlag": "chassis_omni",
		"OmniTechCostBySize": false,
		"OmniTechInstallCost": 1,

		"OverrideSalvageGeneration": false,
		"NoLootCTDestroyed": false,

		"OverrideRecoveryChance": false,
		"SalvageUnrecoveredMech": false,
		"BaseRecoveryChance": 0.6,
		"LimbRecoveryPenalty": 0.05,
		"TorsoRecoveryPenalty": 0.1,
		"HeadRecoveryPenaly": 0,
		"EjectRecoveryBonus": 0.25,

		"OverrideMechPartCalculation": false,
		"CenterTorsoDestroyedParts": 1,
		"SalvageArmWeight": 0.75,
		"SalvageLegWeight": 0.75,
		"SalvageTorsoWeight": 1,
		"SalvageHeadWeight": 0.5
	},
	"Manifest" : [
		{
			"Type": "AdvancedJSONMerge",
			"Path": "advancedjsonmerge",
			"ShouldMergeJSON": false
		},
		{
            "Type": "CCUnitTypes",
            "Path": "data/unittypes"
        },
		{
			"Type": "CCHardpoints",
			"Path": "data/hardpoints"
		}
	]
